---
import Text from "../atoms/Text.astro";

import ExperienceCard from "../organisms/ExperienceCard.astro";

import { experiences } from "../../data/experiences";
---

<div class="flex flex-col py-4" id="experience">
  <Text variant="subtitle" bold>Experiencia Laboral</Text>
  <hr class="mb-3 border-white/30" />
  {
    experiences.map((experience, index) => (
      <ExperienceCard experience={experience} />
    ))
  }
</div>

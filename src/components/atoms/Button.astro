---
interface Props {
  Icon: any;
  text: string;
  href?: string;
}

const { Icon, text, href = "https://www.google.com/" } = Astro.props;
---

<button class={`flex justify-start gap-3 hover:scale-110 transition`}>
  <a
    href={href}
    class="text-lg px-4 py-2 bg-[#fff] text-[#0F3460] font-bold rounded-lg flex items-center gap-2"
    target="_blank"
  >
    {text}
    <div class="text-2xl group-hover/live:rotate-45 transition-transform">
      <Icon />
    </div>
  </a>
</button>
